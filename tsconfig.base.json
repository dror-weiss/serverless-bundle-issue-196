{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "module": "esNext",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": false,
    "preserveSymlinks": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "target": "es2018",
    "types": ["node", "jest"]
  },
  "exclude": [
    "dist",
    "**/*.spec.ts"
  ]
}